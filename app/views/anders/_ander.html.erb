<div id="<%= dom_id ander %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Comment:</strong>
    <%= ander.comment %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Andr:</strong>
    <%= ander.andr_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this ander", ander, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this ander', edit_ander_path(ander), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
