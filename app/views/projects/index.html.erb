<h1 class="text-3xl font-semibold mb-4" style='margin-top: -44%; margin-left: -1%'>Projects</h1>

<div class="flex flex-wrap gap-4">
  <% @projects.each do |project| %>
    <div class="bg-white rounded-lg shadow-md p-4 w-80">
      <h2 class="text-xl font-semibold text-blue-600 mb-2"><%= project.name %></h2>
      <p class="text-gray-600 mb-4"><%= project.description %></p>
      <p class="text-center">
        <%= link_to "Show this project", project, class:"text-blue-600 rounded" %>
      </p>
    </div>
  <% end %>
</div>

