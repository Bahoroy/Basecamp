    <%= form_with(model: project) do |form| %>
      <% if project.errors.any? %>
        <div class="text-red-600">
          <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
            <% project.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :name, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :description, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= form.hidden_field :user_id, value: current_user.id %>
      </div>

      <div class="flex items-center justify-center">
        <%= form.submit "Create Project", class: "px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-md font-semibold focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
    <% end %>
